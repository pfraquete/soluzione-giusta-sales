{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    { "path": "/api/sales/cron/outbound", "schedule": "0 12 * * 1-5" },
    { "path": "/api/sales/cron/followup", "schedule": "0 9,13,17 * * 1-5" },
    { "path": "/api/sales/cron/nurture", "schedule": "0 17 * * 2,4" },
    { "path": "/api/sales/cron/cs", "schedule": "0 14 * * 1,3,5" },
    { "path": "/api/sales/cron/scraper", "schedule": "0 11 * * 0" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
